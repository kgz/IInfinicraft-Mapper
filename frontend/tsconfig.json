{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"noEmit": true,
		"jsx": "react-jsx",
		"noImplicitAny": false
	},
	"include": [
		"src",
		"src/dummy_data.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}